import java.util.Arrays;

public class StringSplit 
{
	public static void main(String[] args) 
	{
		System.out.println(Arrays.toString("I like apples!".split(" "))); 
		System.out.println(splitSandwichAtSpaces("bread bread ham lettuce yogurt tomatoe mayo mayo mayo bread cheese egg cheese bread bread"));
		System.out.println(splitSandwichAtSpaces("bread bread"));
		System.out.println(splitSandwichAtSpaces("bread mayo mayo bread"));
		System.out.println(splitSandwichAtSpaces("bread ham bread mayo badsasd"));
		System.out.println(splitSandwichAtSpaces("ham ham bread bread"));
		System.out.println(splitSandwichAtSpaces("bread mayo mayo bread "));
		System.out.println(splitSandwichAtSpaces("mayo bread bread mayo mayo"));
		System.out.println(splitSandwichAtSpaces("bread bread ham ham ham"));
		System.out.println(splitBread("breadbreadhihibread"));
		System.out.println(splitBread("breadbread"));
		System.out.println(splitBread("hihibreadbread"));
		System.out.println(splitBread("breadhibreadhisuperbreadmianbreadaasd"));
		System.out.println(splitBread("breadhihibreadbread"));
	}
	public static String splitSandwichAtSpaces(String sandwich){
		//starts with a space so if bread is at the beginning it won't impact the code
		//AnswerToReturn is the final String answer
		String finalStringReturn = "";
		String withoutSpaces = "  ";
		String notSandwich = "Ingredients entered are not a sandwich.";
		String [] sandwichBrokenDown = sandwich.split(" ");
		//Adds all the parts of the String array to a new string
		for (int i = 0; i < sandwichBrokenDown.length; i++){
			withoutSpaces += sandwichBrokenDown[i];
		}
		//Adds space to the end so ending with bread won't impact the code
		withoutSpaces = " " + withoutSpaces;
		withoutSpaces += " ";
		String[] arrayBread = withoutSpaces.split("bread");
		//Makes sure there is a sandwich
		if(arrayBread.length <= 2){
			return notSandwich;
		}else {
			//Runs through array with bread and spaces split out
			for(int i = 1; i < arrayBread.length-1; i++){
				//All conditions have to be met to print not a sandwich, guarantees that no faulty return statements happen
				if(arrayBread[i].equals("") && i == arrayBread.length - 2){
					return notSandwich;
				}
				else{
					finalStringReturn += arrayBread[i];
				}
			}
			}
		return finalStringReturn;
		}
	//	if(revisedSandwich.length == 3){
	//		sandwich = revisedSandwich[1];
	//		System.out.println(sandwich);
	//	}
	public static String splitBread(String breadStatement){
		//Adds spaces to the statement in case we start or end with bread
		String finalString = "";
		String notASandwiche = "not a sandwiche";
		String preventError = " " + breadStatement + " ";
		// get rid of bread
		String[] breadArray = preventError.split("bread");
		// Makes sure it is a sandwich
		if(breadArray.length <= 2){
			return notASandwiche;
		}else{
			for(int i = 1; i <breadArray.length-1; i++){
				String breadMiddleStatement = breadArray[i];
				//If two breads are next to each other, there will be a space taking up an index of an Array
				if(breadArray[i].equals("")){
					System.out.print("");
				}else{
					finalString += breadMiddleStatement;
				}
			}
		}
		return finalString;
	}
}